#include <dt-bindings/gpio/gpio.h>

#define GRAYHAWK_CAMERA0  "dummy,camera"
#define GRAYHAWK_CAMERA1  "dummy,camera"
#define GRAYHAWK_CAMERA2  "dummy,camera"
#define GRAYHAWK_CAMERA3  "dummy,camera"
#define GRAYHAWK_CAMERA4  "dummy,camera"
#define GRAYHAWK_CAMERA5  "dummy,camera"
#define GRAYHAWK_CAMERA6  "dummy,camera"
#define GRAYHAWK_CAMERA7  "dummy,camera"

/* Define the endpoint links */
#ifdef GRAYHAWK_CAMERA0
&max96724_in0 {
	remote-endpoint = <&fakra_con0>;
};
#endif

#ifdef GRAYHAWK_CAMERA1
&max96724_in1 {
	remote-endpoint = <&fakra_con1>;
};
#endif

#ifdef GRAYHAWK_CAMERA2
&max96724_in2 {
	remote-endpoint = <&fakra_con2>;
};
#endif

#ifdef GRAYHAWK_CAMERA3
&max96724_in3 {
	remote-endpoint = <&fakra_con3>;
};
#endif

#ifdef GRAYHAWK_CAMERA4
&max96724_in4 {
	remote-endpoint = <&fakra_con4>;
};
#endif

#ifdef GRAYHAWK_CAMERA5
&max96724_in5 {
	remote-endpoint = <&fakra_con5>;
};
#endif

#ifdef GRAYHAWK_CAMERA6
&max96724_in6 {
	remote-endpoint = <&fakra_con6>;
};
#endif

#ifdef GRAYHAWK_CAMERA7
&max96724_in7 {
	remote-endpoint = <&fakra_con7>;
};
#endif

/* Cameras are 'attached' to the GMSL I2C busses */
&gmsl0 {

#if defined(GRAYHAWK_CAMERA0) || defined(GRAYHAWK_CAMERA1) || \
	defined(GRAYHAWK_CAMERA2) || defined(GRAYHAWK_CAMERA3)
	status = "okay";

#endif

	i2c-mux {
#ifdef GRAYHAWK_CAMERA0
		i2c@0 {
			status = "okay";

			camera@51 {
				compatible = GRAYHAWK_CAMERA0;
				reg = <0x51>;

				port {
					fakra_con0: endpoint {
						remote-endpoint = <&max96724_in0>;
					};
				};
			};
		};
#endif

#ifdef GRAYHAWK_CAMERA1
		i2c@1 {
			status = "okay";

			camera@52 {
				compatible = GRAYHAWK_CAMERA1;
				reg = <0x52>;

				port {
					fakra_con1: endpoint {
						remote-endpoint = <&max96724_in1>;
					};
				};
			};
		};
#endif

#ifdef GRAYHAWK_CAMERA2
		i2c@2 {
			status = "okay";

			camera@53 {
				compatible = GRAYHAWK_CAMERA2;
				reg = <0x53>;

				port {
					fakra_con2: endpoint {
						remote-endpoint = <&max96724_in2>;
					};
				};
			};
		};
#endif

#ifdef GRAYHAWK_CAMERA3
		i2c@3 {
			status = "okay";

			camera@54 {
				compatible = GRAYHAWK_CAMERA3;
				reg = <0x54>;

				port {
					fakra_con3: endpoint {
						remote-endpoint = <&max96724_in3>;
					};
				};
			};
		};
#endif
	};
};

&gmsl1 {

#if defined(GRAYHAWK_CAMERA4) || defined(GRAYHAWK_CAMERA5) || \
	defined(GRAYHAWK_CAMERA6) || defined(GRAYHAWK_CAMERA7)
	status = "okay";

#endif

